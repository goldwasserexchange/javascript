{
  "name": "@goldwasserexchange/utils",
  "version": "1.4.0",
  "description": "GE Utils",
  "author": "Jonathan Goldwasser <jonathan@goldwasserexchange.be>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/goldwasserexchange/ge-utils"
  },
  "scripts": {
    "lint": "eslint . --ignore-path .gitignore --cache",
    "test": "cross-env BABEL_ENV=commonjs jest --coverage",
    "generate-index": "cross-env BABEL_ENV=commonjs babel-node ./scripts/generateIndex",
    "clean": "rimraf lib es",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build": "npm run clean && npm run generate-index && npm run build:commonjs && npm run build:es"
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "eslintConfig": {
    "extends": "airbnb",
    "rules": {
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "linebreak-style": 0
    }
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false,
          "loose": true
        }
      ],
      "stage-0"
    ],
    "plugins": [
      "annotate-pure-calls"
    ],
    "env": {
      "commonjs": {
        "plugins": [
          [
            "transform-es2015-modules-commonjs",
            {
              "loose": true
            }
          ],
          [
            "transform-imports",
            {
              "ramda": {
                "transform": "ramda/src/${member}",
                "preventFullImport": true
              }
            }
          ]
        ]
      },
      "es": {
        "plugins": [
          [
            "transform-imports",
            {
              "ramda": {
                "transform": "ramda/es/${member}",
                "preventFullImport": true
              }
            }
          ]
        ]
      }
    }
  },
  "dependencies": {
    "json-stringify-safe": "^5.0.1",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-annotate-pure-calls": "^0.2.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-imports": "^1.4.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.1.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^21.2.1",
    "rimraf": "^2.6.2"
  }
}
