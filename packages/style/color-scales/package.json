{
  "name": "@goldwasserexchange/color-scales",
  "version": "5.4.0",
  "description": "The color scales used by Goldwasser Exchange",
  "homepage": "https://github.com/goldwasserexchange/public",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goldwasserexchange/public.git"
  },
  "license": "MIT",
  "author": "Hans Scheuren",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production ge-scripts babel",
    "lint": "yarn lint:pkg && yarn lint:js",
    "lint:js": "ge-scripts lint-js",
    "lint:pkg": "npmPkgJsonLint .",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run build",
    "sort": "sort-package-json"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint:js"
    ],
    "package.json": [
      "npmPkgJsonLint"
    ]
  },
  "eslintConfig": {
    "extends": "@goldwasserexchange"
  },
  "dependencies": {
    "@goldwasserexchange/colors": "^5.0.0"
  },
  "devDependencies": {
    "@goldwasserexchange/babel": "^5.4.0",
    "@goldwasserexchange/eslint-config": "^5.4.0",
    "@goldwasserexchange/npm-package-json-lint-config": "^5.4.0",
    "cross-env": "^5.2.0",
    "ge-scripts": "^5.4.0",
    "lint-staged": "^8.1.0",
    "npm-package-json-lint": "^3.4.1",
    "sort-package-json": "^1.22.1"
  },
  "engines": {
    "node": ">=6.10"
  },
  "publishConfig": {
    "access": "public"
  },
  "npmPackageJsonLintConfig": {
    "extends": "@goldwasserexchange/npm-package-json-lint-config"
  }
}
