{
  "name": "@goldwasserexchange/color-scales",
  "version": "6.1.3",
  "description": "The color scales used by Goldwasser Exchange",
  "homepage": "https://github.com/goldwasserexchange/public",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goldwasserexchange/public.git"
  },
  "license": "MIT",
  "author": "Hans Scheuren",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production ge-scripts babel",
    "lint": "yarn lint:pkg && yarn lint:js",
    "lint:js": "ge-scripts lint-js",
    "lint:pkg": "npmPkgJsonLint .",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run build",
    "sort": "sort-package-json"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint:js"
    ],
    "package.json": [
      "npmPkgJsonLint"
    ]
  },
  "eslintConfig": {
    "extends": "@goldwasserexchange"
  },
  "dependencies": {
    "@goldwasserexchange/colors": "^6.1.3"
  },
  "devDependencies": {
    "@goldwasserexchange/babel": "^6.1.3",
    "@goldwasserexchange/eslint-config": "^6.1.2",
    "@goldwasserexchange/npm-package-json-lint-config": "^6.1.2",
    "cross-env": "^7.0.0",
    "ge-scripts": "^6.1.3",
    "lint-staged": "^10.0.7",
    "npm-package-json-lint": "^4.6.0",
    "sort-package-json": "^1.39.1"
  },
  "engines": {
    "node": ">=6.10"
  },
  "publishConfig": {
    "access": "public"
  },
  "npmpackagejsonlint": {
    "extends": "@goldwasserexchange/npm-package-json-lint-config"
  }
}
