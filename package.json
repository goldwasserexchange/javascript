{
  "name": "@goldwasserexchange/public",
  "description": "Goldwasser Exchange's public packages",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "commit": "git-cz",
    "build": "lerna run build",
    "publish": "lerna publish --conventional-commits",
    "lint": "ge-scripts lint-js --cache-location lint_cache/.eslintcache",
    "jest": "jest",
    "test": "yarn lint && yarn jest",
    "lerna": "lerna"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goldwasserexchange/public.git"
  },
  "devDependencies": {
    "@goldwasserexchange/jest-config": "^4.4.0",
    "@goldwasserexchange/utils": "^4.4.0",
    "commitizen": "^2.10.0",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "fs-extra": "^7.0.0",
    "ge-scripts": "^4.4.0",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^23.6.0",
    "lerna": "^3.3.0",
    "lint-staged": "^7.2.2",
    "require-dir": "^1.0.0"
  },
  "author": "Hans Scheuren",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/goldwasserexchange/public/issues"
  },
  "homepage": "https://github.com/goldwasserexchange/public#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "@goldwasserexchange"
  },
  "lint-staged": {
    "*.js": [
      "yarn lint"
    ]
  }
}
