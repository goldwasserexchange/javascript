{
  "name": "@goldwasserexchange/javascript",
  "description": "A serie of tools to lint, build and deploy javascript code",
  "scripts": {
    "commit": "git-cz",
    "bootstrap": "lerna bootstrap && lerna run postBootstrap",
    "publish": "lerna publish --conventional-commits",
    "lint:js": "cross-env NODE_ENV=test ge-scripts lint-js --cache-location lint_cache/.eslintcache",
    "test": "npm run lint:js",
    "lerna": "lerna"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goldwasserexchange/javascript.git"
  },
  "devDependencies": {
    "commitizen": "^2.10.0",
    "cross-env": "^5.2.0",
    "cz-lerna-changelog": "^1.2.1",
    "ge-scripts": "^3.29.1",
    "lerna": "^2.5.1"
  },
  "author": "Hans Scheuren",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/goldwasserexchange/javascript/issues"
  },
  "homepage": "https://github.com/goldwasserexchange/javascript#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "eslintConfig": {
    "extends": "./packages/eslint-config/index.js",
    "overrides": [
      {
        "files": [
          "packages/**/scripts/*.js"
        ],
        "rules": {
          "import/no-extraneous-dependencies": 0
        }
      }
    ]
  }
}
